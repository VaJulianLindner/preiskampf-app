<body class="flex min-h-full antialiased bg-zinc-900" xui-layout="full_width" hx-ext="http-header-enriched-ui">
<div class="w-full">
    <div class="h-full">
        <header class="contents lg:pointer-events-none lg:fixed lg:inset-0 lg:z-40 lg:flex">
            <div class="contents lg:pointer-events-auto lg:block lg:w-72 lg:overflow-y-auto lg:px-6 lg:pb-8 lg:pt-4 xl:w-80">
                <div class="hidden lg:flex">
                    {{> partials/atoms/logo}}
                </div>
                <div class="lg:hidden">
                    {{> partials/header/main is_inside_mobile_nav=false is_full_width_layout=true}}
                </div>
            </div>
        </header>
        <div class="relative flex h-full flex-col px-4 lg:pt-14 sm:px-6 lg:px-8">
            <main class="flex-auto mx-auto">
                <article class="flex h-full flex-col pb-10 lg:pt-16">
                    {{> partials/atoms/background_gradient}}
                    <div class="flex-auto prose [html_:where(&>*)]:mx-auto [html_:where(&>*)]:max-w-2xl [html_:where(&>*)]:lg:mx-[calc(50%-min(50%,theme(maxWidth.lg)))] [html_:where(&>*)]:lg:max-w-full">
                        {{> @partial-block}}
                    </div>
                </article>
            </main>
            {{> partials/footer}}
        </div>
    </div>
</div>
{{> partials/notifications/message notification=notification}}
</body>