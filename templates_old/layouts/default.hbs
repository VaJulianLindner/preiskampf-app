<body class="flex min-h-full antialiased bg-zinc-900" xui-layout="default" hx-ext="http-header-enriched-ui">
<div class="w-full">
    <div class="h-full lg:ml-72 xl:ml-80">
        <header class="contents lg:pointer-events-none lg:fixed lg:inset-0 lg:z-40 lg:flex">
            <div class="contents lg:pointer-events-auto lg:block lg:w-72 lg:overflow-y-auto lg:border-r lg:px-6 lg:pb-8 lg:pt-4 lg:border-white/10 xl:w-80">
                <div class="hidden lg:flex">
                    {{> partials/atoms/logo}}
                </div>
                {{> partials/header/main is_inside_mobile_nav=false}}
                <nav class="hidden lg:mt-10 lg:block">
                    {{> partials/navigation/main}}
                </nav>
            </div>
        </header>
        <div class="relative flex h-full flex-col px-4 pt-14 sm:px-6 lg:px-8">
            <main class="flex-auto">
                <article class="flex h-full flex-col pb-10 pt-16">
                    {{> partials/atoms/background_gradient}}
                    <div 
                        class="flex-auto prose [html_:where(&>*)]:mx-auto [html_:where(&>*)]:max-w-2xl [html_:where(&>*)]:lg:mx-[calc(50%-min(50%,theme(maxWidth.lg)))] [html_:where(&>*)]:lg:max-w-full"
                        id="swap-content"
                    >
                        {{> @partial-block}}
                    </div>
                </article>
            </main>
            {{> partials/footer}}
        </div>
    </div>
</div>
{{> partials/notifications/message}}
</body>