{{#> partials/forms/labels_on_left_form action="/user/save" reset="/mein-profil" reset_target="#swap-content" reset_swap="innerHTML" errors=errors}}
    {{> partials/forms/fields/input
        type="hidden"
        name="id"
        value=authenticated_user.id
        required=true
    }}

    {{#> partials/forms/wrappers/labels_on_left_form_wrapper label="Email" hide_border=true readonly=true}}
        {{> partials/forms/fields/input
            type="email"
            name="email"
            value=authenticated_user.email
            required=true
            inline=true
            full_width=true
        }}
    {{/partials/forms/wrappers/labels_on_left_form_wrapper}}
    
    {{#> partials/forms/wrappers/labels_on_left_form_wrapper label="Benutzername"}}
        {{> partials/forms/fields/input
            type="text"
            name="username"
            value=authenticated_user.username
            autocomplete="none"
            required=false
            inline=true
            full_width=true
        }}
    {{/partials/forms/wrappers/labels_on_left_form_wrapper}}
    
    {{#> partials/forms/wrappers/labels_on_left_form_wrapper
        label="Adresse"
        description="Hier kannst du deine Adresse hinterlegen, um spezifische Sonderangebote zu erhalten"
    }}
        {{> partials/forms/fields/input_address
            type="address"
            name="address"
            value=authenticated_user.address
            lng=authenticated_user.address_lng
            lat=authenticated_user.address_lat
            autocomplete="none"
            required=false
            inline=true
            full_width=true
            placeholder="Adresse suchen.."
        }}
    {{/partials/forms/wrappers/labels_on_left_form_wrapper}}
{{/partials/forms/labels_on_left_form}}