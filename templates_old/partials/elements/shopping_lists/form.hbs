{{#> partials/forms/labels_on_left_form 
    action="/shopping_list/save"
    method="put"
    reset=(concat "/einkaufszettel/" shopping_list.id)
    target="#swap-content"
    reset_target="#swap-content"
    swap="none"
    reset_swap="innerHTML"
    errors=errors
}}
    {{#if shopping_list.id}}
        {{> partials/forms/fields/input
            type="hidden"
            name="id"
            value=shopping_list.id
        }}
    {{/if}}

    {{#> partials/forms/wrappers/labels_on_left_form_wrapper label="Anzeigebild" hide_border=true}}
        {{> partials/forms/fields/emoji_picker
            name="emoji_presentation"
            value=shopping_list.emoji_presentation
            required=true
            inline=true
            full_width=true
        }}
    {{/partials/forms/wrappers/labels_on_left_form_wrapper}}

    {{#> partials/forms/wrappers/labels_on_left_form_wrapper label="Name"}}
        {{> partials/forms/fields/input
            type="text"
            name="name"
            value=shopping_list.name
            autocomplete="none"
            required=true
            inline=true
            full_width=true
        }}
    {{/partials/forms/wrappers/labels_on_left_form_wrapper}}

{{/partials/forms/labels_on_left_form}}