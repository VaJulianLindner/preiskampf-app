<div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
    <label for="{{name}}" class="block text-sm font-medium leading-6 text-zinc-400 sm:pt-1.5">
        {{label}}
        {{#if description}}
            <span class="block text-3xs font-normal">{{description}}</span>
        {{/if}}
    </label>
    <div class="mt-2 sm:col-span-2 sm:mt-0 flex rounded-md shadow-sm relative {{#unless hide_border}}ring-1 ring-gray-300 focus-within:ring-2{{/unless}}">
        {{> @partial-block label=false}}
    </div>
</div>